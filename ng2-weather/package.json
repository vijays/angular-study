{
    "name": "angular2-starter-webpack-hmr",
    "version": "1.0.0",
    "description": "Angular 2 Webpack Starter with HMR",
    "main": "",
    "scripts": {
        "clean": "npm cache clean && rimraf node_modules doc typings coverage dist",
        "clean:dist": "rimraf dist",
        "preclean:install": "npm run clean",
        "clean:install": "npm set progress=false && npm install",
        "preclean:start": "npm run clean",
        "clean:start": "npm start",
        "watch": "npm run watch:dev",
        "watch:dev": "webpack --watch --progress --profile --colors --display-error-details --display-cached",
        "watch:prod": "webpack --watch --config webpack.prod.config.js --progress --profile --colors --display-error-details --display-cached",
        "build": "npm run build:dev",
        "prebuild:dev": "npm run clean:dist",
        "build:dev": "webpack --progress --profile --colors --display-error-details --display-cached",
        "prebuild:prod": "npm run clean:dist",
        "build:prod": "webpack --config webpack.prod.config.js --progress --profile --colors --display-error-details --display-cached",
        "server": "npm run server:dev:hmr",
        "server:dev": "webpack-dev-server --inline --progress --profile --colors --watch --display-error-details --display-cached  --content-base src/",
        "server:dev:hmr": "npm run server:dev -- --hot",
        "server:prod": "http-server dist --cors",
        "webdriver:update": "webdriver-manager update",
        "webdriver:start": "webdriver-manager start",
        "lint": "tsconfig-lint",
        "pree2e": "npm run webdriver:update -- --standalone",
        "e2e": "ts-node node_modules/.bin/protractor",
        "e2e:live": "protractor --elementExplorer",
        "docs": "typedoc --options typedoc.json --exclude **/*.spec.ts ./src/",
        "start": "npm run server:dev:hmr",
        "typings-install": "typings install",
        "postinstall": "npm run typings-install",
        "version": "npm run build",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/vijays/angular2-starter-webpack-hmr.git" 
    },
    "author": "vijays",
    "license": "MIT",
    "dependencies": {
        "angular2": "2.0.0-beta.17",
        "core-js": "^2.3.0",
        "rxjs": "5.0.0-beta.6",
        "zone.js": "0.6.12"
    },
    "devDependencies": {
        "angular2-hmr": "~0.5.7",
        "awesome-typescript-loader": "^0.17.0",
        "compression-webpack-plugin": "^0.3.1",
        "copy-webpack-plugin": "^2.1.3",
        "css-loader": "^0.23.1",
        "es6-promise-loader": "^1.0.1",
        "es6-shim": "^0.35.0",
        "es7-reflect-metadata": "^1.6.0",
        "exports-loader": "^0.6.3",
        "expose-loader": "^0.7.1",
        "file-loader": "^0.8.5",
        "html-webpack-plugin": "^2.16.1",
        "http-server": "^0.9.0",
        "imports-loader": "^0.6.5",
        "json-loader": "^0.5.4",
        "raw-loader": "0.5.1",
        "reflect-metadata": "0.1.2",
        "remap-istanbul": "^0.6.3",
        "rimraf": "^2.5.2",
        "source-map-loader": "^0.1.5",
        "style-loader": "^0.13.1",
        "ts-helper": "0.0.1",
        "ts-node": "^0.7.2",
        "tsconfig-lint": "^0.11.0",
        "tslint": "^3.8.1",
        "tslint-loader": "^2.1.4",
        "typedoc": "^0.3.12",
        "typescript": "~1.8.10",
        "typings": "^0.8.1",
        "url-loader": "^0.5.7",
        "webpack": "^1.13.0",
        "webpack-dev-server": "^1.14.1",
        "webpack-md5-hash": "^0.0.5"
    },
    "engines": {
        "node": ">= 4.2.1 <= 5",
        "npm": ">= 3"
    }
}